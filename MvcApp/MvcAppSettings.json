{
    "Theme": "Default",
    "SupportedCultures": [ "en-US", "el-GR" ],

    "Defaults": {
        "CultureCode": "en-US",
        "CurrencyCode": "EUR",
        "CurrencySymbol": "€",
        "MoneyFormat": "€ 0.00",
        "CacheTimeoutMinutes": 15
    },

    "UserCookie": {
        "IsEssential": true,
        "HttpOnly": true,
        "SameSite": "Strict",
        "ExpirationHours": -1
    },

    "Http": {
        "StaticFilesCacheControl": "no-store,no-cache",
        "UserCookieExpirationHours": -1
    },

    "HSTS": {
        "MaxAgeHours": 8680,
        "Preload": true,
        "IncludeSubDomains": true,
        "ExcludedHosts": [
            "example.com",
            "www.example.com"
        ]
    },
    "Seo": {
        "DefaultMetaTitle": "MvcApp",
        "DefaultMetaDescription": "",
        "DefaultMetaKeywords": "",
        "TitleSeparator": " | ",
        "AppendDefaultMetaTitle": true
    }
}