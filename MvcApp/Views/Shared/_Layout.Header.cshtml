<header>
    <div class="header-zone"></div>
    <div class="header-zone header-zone-border">
        
        <a class="" href="/plugin-test"><span>Plugin Test</span></a>    
        <a class="" href="/ajax-demos"><span>Ajax Demos</span></a>       
        <a class="" href="/product/list"><span>Product List</span></a>
        <a class="" href="/product/paging"><span>Product List with Paging</span></a>

        <div class="tp-FlexFill"></div> @* fill *@

        @if (App.AppSettings.UseAuthentication)
        {            
            if (!Lib.AppContext.IsAuthenticated)
            {
                <a class="login" href="/login">
                    <span class="tp-Hide-sm tp-Hide-xs">@L("Login")</span>
                </a>
            }
            else
            {
                <a class="logout" href="/logout">
                    <span class="tp-Hide-sm tp-Hide-xs">@L("Logout")</span>
                </a>
            }            
        }
            
        @await Component.InvokeAsync("LanguageSelector")
    </div>
</header>
