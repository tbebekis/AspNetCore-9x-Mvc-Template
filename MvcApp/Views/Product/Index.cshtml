@model List<ProductModel>

@{
}

<div>
    <h2>Product List</h2>

    @if (Model.Count == 0)
    {
        <h6>No Products yet.</h6>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model[0].Name)</th>
                    <th>@Html.DisplayNameFor(model => model[0].Price)</th>
                    <th>View</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Item in Model)
                {
                    <tr>
                        <td>@Item.Name</td>
                        <td>@Item.Price</td>
                        <td>@Html.ActionLink("View", "Details", new { Id = Item.Id }) </td>
                        <td>@Html.ActionLink("Edit", "Edit", new { Id = Item.Id }) </td>
                        <td>@Html.ActionLink("Delete", "Delete", new { Id = Item.Id }) </td>
                    </tr>
                }
            </tbody>
        </table>
    }


</div>